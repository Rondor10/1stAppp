<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followUs" />

                <ImageButton
                    android:id="@+id/facebook_btn"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8.5dp"
                    android:background="@drawable/facebook" />

                <ImageButton
                    android:id="@+id/instagram_btn"
                    android:layout_width="33dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/instagram" />

                <ImageButton
                    android:id="@+id/goToChat_btn"
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/message" />

            </LinearLayout>


            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ttt"
                android:layout_marginTop="16dp"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/titleMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ttttt"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wantedGender_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/lookingForGender"
                android:textSize="14dp" />

            <RadioGroup
                android:id="@+id/radioGroup_wantedGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/wantedMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onSelectWantedGender"
                    android:text="@string/male" />

                <RadioButton
                    android:id="@+id/wantedFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onSelectWantedGender"
                    android:text="@string/female" />

                <RadioButton
                    android:id="@+id/wantedOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onSelectWantedGender"
                    android:text="@string/other" />

                <RadioButton
                    android:id="@+id/wantedFlexible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onSelectWantedGender"
                    android:text="@string/noPreferences" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/ageRange" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from" />
                <EditText
                    android:id="@+id/minAge_editText"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/to" />
                <EditText
                    android:id="@+id/maxAge_editText"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distance"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:textSize="14dp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="337dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"
                android:max="19"
                android:min="0"
                android:progress="1"
                android:thumb="@drawable/thumb_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/hobbies" />

            <com.example.a1stapp.MultiSelectSpinner
                android:id="@+id/mSpinner"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_gravity="left" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button"
                android:text="@string/moveToMap"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
